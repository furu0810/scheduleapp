<%# スケジュール新規登録ページにCSSを適用 #%>
<%= stylesheet_link_tag "schedules/new", :media => "all" %>

<div class="bg-image">

  <div class="m-5 text-center text-primary">
    
    <h3>スケジュールの新規登録</h3>
    
  </div>
  
  <div class="row">
    
    <div class="col-sm-6 offset-sm-3">
    
      <div class="center jumbotron bg-success">
        
        <%= form_with(model: @schedule, local: true) do |f| %>
        
        <%= render "layouts/schedule_errors", model: f.object %>
        
          <div class="form-group">
            
            <%= f.label :title, "タイトル：" %>
            
            <%= f.text_field :title, class: "form-control" %>
            
          </div>
          
          <div class="form-group">
            
            <%= f.label :body, "内容：" %>
            
            <%= f.text_area :body, class: "form-control" %>
            
          </div>
          
          <div class="form-group">
            
            <%= f.label :place, "場所：" %>
            
            <%= f.text_field :place, class: "form-control" %>
            
          </div>
          
          <div class="form-group">
            
            <%= f.label :start_time, "開始時間：" %>
            
            <%= f.datetime_field :start_time, class: "form-control" %>
            
          </div>
          
           <div class="form-group">
            
            <%= f.label :end_time, "終了時間：" %>
            
            <%= f.datetime_field :end_time, class: "form-control" %>
            
          </div>
          
          <%= f.submit "登録", class: "btn btn-secondary btn-block" %>
          
        <% end %>
  
      </div>
  
    </div>
  
  </div>
  
  <div class="row align-items-center">
    
    <div class="col-sm-6 offset-sm-3">
  
      <%= link_to "スケジュールの一覧に戻る", schedules_path, class: "btn btn-lg btn-primary" %>
      
    </div>
  
  </div>

</div>