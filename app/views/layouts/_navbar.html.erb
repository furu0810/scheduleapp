<% if logged_in? %>
  
  <header class="mb-4">
    
    <nav class="navbar navbar-expand-sm navbar-dark bg-success">
      
      <a class="navbar-brand" href="/">スケジュール管理アプリ</a>
      
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent">
        
        <span class="navbar-toggler-icon"></span>
        
      </button>
      
    
      <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
        
        <ul class="navbar-nav">
          
          <li class="nav-item"><%= link_to "マイページ", user_path(current_user), class: "nav-link" %></li>
          
          <li class="nav-item"><%= link_to "ログアウト", logout_path, method: :delete, class: "nav-link" %></li>
          
        </ul>
        
      </div>
      
    </nav>
    
  </header>

<% else %>

  <header class="mb-4">
    
    <nav class="navbar navbar-expand-sm navbar-dark bg-success">
      
      <a class="navbar-brand" href="/">スケジュール管理アプリ</a>
      
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent">
        
        <span class="navbar-toggler-icon"></span>
        
      </button>
      
    
      <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
        
        <ul class="navbar-nav">
          
          <li class="nav-item"><%= link_to "ログイン", login_path, class: "nav-link" %></li>
          
          <li class="nav-item"><%= link_to "サインアップ", signup_path, class: "nav-link" %></li>
          
        </ul>
        
      </div>
      
    </nav>
    
  </header>

<% end %>