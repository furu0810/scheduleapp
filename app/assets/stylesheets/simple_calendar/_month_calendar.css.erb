.simple-calendar {

  margin: 100px;

}

.calendar-heading {
    
  margin: 50px;
  
  text-align: center;
  
  font-size: 30px;

}

span.calendar-title {

  font-size: 50px;

}

table.table {

  border: 3px solid aqua;

}

<%# カレンダーの曜日の背景色などのデザイン #%>
thead {
  
  background-color: lime;

}

<%# カレンダーの曜日の文字の位置の調整コード #%>
table.table thead tr th {

  text-align: center;

}

<%# カレンダーの日付ごとのサイズを調整 #%>
table.table tbody tr {
    
  height: 150px;
  
  background-color: silver;

} 