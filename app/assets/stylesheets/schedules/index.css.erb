<%# スケジュール一覧ページの背景画像デザイン #%>
.bg-image {
  
  padding: 100px 0px 100px 0px;
  
  background-image: url(<%= asset_path('schedulephoto.jpg') %>);
  
  background-size: cover; <%# 画像の全画面表示 #%>
  
  background-attachment: fixed; <%# 画像の固定 #%>
  
  background-position: center center; <%# 画像の中心を基準に表示 #%>
  
}


p {

  text-align: left;
  
  color: blue;
  
  font-size: 30px;
  
  font-family: Orbitron;
  
  letter-spacing: 7px;
  
}


.bottom {
  
  margin: 0px 30px 50px 0px;
  
  text-align: right;

}

h3 {

  margin: 30px;

  text-align: center;

}

h4 {

  margin: 30px;
  
  text-align: left;

}



